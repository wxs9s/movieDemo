.img_wrap{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 5rpx;
}
.full_show{
  /* padding: 0 10rpx 10rpx ; */
  width: 44%;
  
}
.img_item{
  position: relative;
}
.img_show image{
  width:100%;
  height: 360rpx;
  border-radius: 15rpx;
}
.img_info{
  position: absolute;
  left: 0;
  bottom: 10rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  color: #fff;
  font-size: 30rpx;
}
.img_desc{
  font-size: 36rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 10rpx;
}
